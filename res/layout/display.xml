<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/feedStatus" android:text="Feed is being populated" android:layout_gravity="center"></TextView>
    <TextView android:id="@+id/message" android:layout_height="fill_parent" android:layout_weight="1" android:layout_width="fill_parent"></TextView>
    <TableLayout android:layout_width="fill_parent" android:id="@+id/tableLayout1" android:layout_height="wrap_content" android:stretchColumns="*">
        <TableRow android:id="@+id/tableRow1" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <Button android:id="@+id/back" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Back"></Button>
            <Button android:id="@+id/next" android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="Next"></Button>
        </TableRow>
    </TableLayout>
    
</LinearLayout>